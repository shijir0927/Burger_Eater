<div class="container">
  <div class="jumbotron text-center bg-dark text-white">
    <h1 class="display-4" id="app-title">A Burger Eating Simulator</h1>
    <p class="lead">Make a Burger. Eat a Burger. </p>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card border border-primary">
        <div class="card-header bg-dark text-white">
          How can I serve you today?
        </div>

        <div class="card-body">
          <form class="create-form">
            <div class="form-group">
              <label for="burger">Place order here:</label>
              <input type="text" class="form-control" id="burgerToGo" placeholder="">
            </div>
            <button class="btn btn-dark" type="submit">Place Order</button>
          </form>
        </div>
      </div>
    </div>
  </div>


  <div class="row mt-4">
    <div class="col-md-6 mt-6">
      <div class="card border border-primary">
        <div class="card-header bg-dark text-white">
         Burgers
        </div>
        <div class="card-body">
              {{#each burgers}}
                {{#unless devoured}}
                  {{> burgers/burger-block devour=false}}
                {{/unless}}
              {{/each}}
        </div>
      </div>
    </div>

    <div class="col-md-6 mt-6">
      <div class="card devoured-card">
        <div class="card-header text-white bg-dark" id="devoured-card-header">
         Devoured burgers
        </div>
        <!--When a burger has been devoured, put burger here-->
        <div class="card-body">
          {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-devoured devour=true}}
              {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>






